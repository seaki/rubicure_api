version: '3'
services:
  mutagen:
    image: alpine:latest
    entrypoint:
      - tail
      - -f
      - /dev/null
    container_name: rubicure-api-mutagen
    stop_grace_period: 0s
    volumes:
      - code:/code
  web:
    volumes:
      - code:/usr/src/rubicure_api
volumes:
  code:
